<Window x:Class="Homework4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<StackPanel>

		<TextBlock FontWeight="Bold" FontSize="14" Margin="10,10,0,0">Please, Enter Zipcode:</TextBlock>
		<TextBox x:Name="uxZipcode" TextChanged="uxZipcode_TextChanged" HorizontalAlignment="Left" Height="40 " Width="150" Margin="10,10,10,10"></TextBox>
		
		<Button x:Name="uxSubmit" HorizontalAlignment="Left" Height="40" Width="80" Margin="10,10,10,10">Submit</Button>
		
	</StackPanel> 
</Window>
